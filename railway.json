{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": { "cmds": ["python -m playwright install --with-deps chromium"] }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn -w 1 -k gthread -t 120 -b 0.0.0.0:$PORT app:app",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
